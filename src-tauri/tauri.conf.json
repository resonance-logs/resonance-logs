{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "resonance-logs",
    "version": "0.15.3",
    "identifier": "com.resonance-logs",
    "build": {
        "beforeDevCommand": "npm run dev:stop-windivert",
        "beforeBuildCommand": "npm run build:stop-windivert",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Resonance Logs - Live",
                "label": "live",
                "url": "live",
                "shadow": false,
                "decorations": false,
                "transparent": true,
                "minWidth": 410,
                "minHeight": 120,
                "alwaysOnTop": true,
                "skipTaskbar": true
            },
            {
                "title": "Resonance Logs - Main",
                "label": "main",
                "url": "main",
                "width": 855,
                "height": 600,
                "minWidth": 855,
                "minHeight": 300,
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "copyright": "GNU General Public License v3.0",
        "targets": ["nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "./WinDivert.dll",
            "./WinDivert64.sys",
            "./meter-data/"
        ],
        "createUpdaterArtifacts": true
    },
    "plugins": {
